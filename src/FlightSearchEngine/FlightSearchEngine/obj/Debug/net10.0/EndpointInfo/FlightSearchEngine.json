          {
            "name": "returnDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "adults",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
